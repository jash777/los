{
  "version": "3.0",
  "description": "Comprehensive JSON-based Rule Engine Configuration",
  "last_updated": "2025-01-22",
  "metadata": {
    "compliance": {
      "rbi_guidelines": "2022 Digital Lending Guidelines",
      "fair_practices_code": "RBI/2003-04/162",
      "kyc_aml": "RBI Master Direction KYC 2016"
    },
    "rule_types": ["kyc", "cibil", "eligibility", "risk_assessment"],
    "operators": [">", "<", ">=", "<=", "==", "!=", "in", "not_in", "contains", "not_contains", "exists", "not_exists"]
  },

  "kyc_rules": {
    "document_verification": {
      "KYC_001": {
        "name": "Mandatory Documents Check",
        "description": "Verify all mandatory documents are present and verified",
        "conditions": [
          {
            "field": "documents.aadhar.verified",
            "operator": "==",
            "value": true
          },
          {
            "field": "documents.pan.verified",
            "operator": "==",
            "value": true
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 25,
        "message": "All mandatory documents (Aadhar, PAN) are verified",
        "flag": "MANDATORY_DOCS_VERIFIED"
      },
      "KYC_002": {
        "name": "Address Proof Verification",
        "description": "Verify address proof documents",
        "conditions": [
          {
            "field": "documents.aadhar.address_verified",
            "operator": "==",
            "value": true
          }
        ],
        "logical_operator": "OR",
        "alternative_conditions": [
          {
            "field": "documents.utility_bill.verified",
            "operator": "==",
            "value": true
          },
          {
            "field": "documents.bank_statement.address_verified",
            "operator": "==",
            "value": true
          }
        ],
        "action": "approve",
        "severity": "high",
        "score": 20,
        "message": "Address proof verified successfully",
        "flag": "ADDRESS_VERIFIED"
      },
      "KYC_003": {
        "name": "PAN Format Validation",
        "description": "Validate PAN number format",
        "conditions": [
          {
            "field": "personal_info.pan_number",
            "operator": "matches_regex",
            "value": "^[A-Z]{5}[0-9]{4}[A-Z]{1}$"
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 15,
        "message": "PAN format is valid",
        "flag": "PAN_FORMAT_VALID"
      },
      "KYC_004": {
        "name": "Aadhar Format Validation",
        "description": "Validate Aadhar number format",
        "conditions": [
          {
            "field": "personal_info.aadhar_number",
            "operator": "matches_regex",
            "value": "^[0-9]{12}$"
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 15,
        "message": "Aadhar format is valid",
        "flag": "AADHAR_FORMAT_VALID"
      }
    },
    "identity_verification": {
      "KYC_005": {
        "name": "Name Matching",
        "description": "Verify name consistency across documents",
        "conditions": [
          {
            "field": "verification.name_match_score",
            "operator": ">=",
            "value": 80
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "medium",
        "score": 10,
        "message": "Name matching successful across documents",
        "flag": "NAME_MATCH_SUCCESS"
      }
    }
  },

  "cibil_rules": {
    "credit_score": {
      "CIBIL_001": {
        "name": "Excellent Credit Score",
        "description": "Credit score above 750",
        "conditions": [
          {
            "field": "credit_report.cibil_score",
            "operator": ">=",
            "value": 750
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "low",
        "score": 30,
        "message": "Excellent credit score - low risk applicant",
        "flag": "EXCELLENT_CREDIT"
      },
      "CIBIL_002": {
        "name": "Good Credit Score",
        "description": "Credit score between 650-749",
        "conditions": [
          {
            "field": "credit_report.cibil_score",
            "operator": ">=",
            "value": 650
          },
          {
            "field": "credit_report.cibil_score",
            "operator": "<",
            "value": 750
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "low",
        "score": 20,
        "message": "Good credit score - acceptable risk",
        "flag": "GOOD_CREDIT"
      },
      "CIBIL_003": {
        "name": "Fair Credit Score",
        "description": "Credit score between 550-649",
        "conditions": [
          {
            "field": "credit_report.cibil_score",
            "operator": ">=",
            "value": 550
          },
          {
            "field": "credit_report.cibil_score",
            "operator": "<",
            "value": 650
          }
        ],
        "logical_operator": "AND",
        "action": "conditional",
        "severity": "medium",
        "score": 10,
        "message": "Fair credit score - requires additional verification",
        "flag": "FAIR_CREDIT"
      },
      "CIBIL_004": {
        "name": "Poor Credit Score",
        "description": "Credit score below 550",
        "conditions": [
          {
            "field": "credit_report.cibil_score",
            "operator": "<",
            "value": 550
          }
        ],
        "logical_operator": "AND",
        "action": "reject",
        "severity": "high",
        "score": -20,
        "message": "Poor credit score - high risk of default",
        "flag": "POOR_CREDIT"
      }
    },
    "credit_history": {
      "CIBIL_005": {
        "name": "No Defaults",
        "description": "No payment defaults in credit history",
        "conditions": [
          {
            "field": "credit_report.defaults_count",
            "operator": "==",
            "value": 0
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "low",
        "score": 15,
        "message": "Clean credit history with no defaults",
        "flag": "NO_DEFAULTS"
      },
      "CIBIL_006": {
        "name": "Recent Defaults",
        "description": "Payment defaults in last 12 months",
        "conditions": [
          {
            "field": "credit_report.recent_defaults_12m",
            "operator": ">",
            "value": 0
          }
        ],
        "logical_operator": "AND",
        "action": "reject",
        "severity": "high",
        "score": -25,
        "message": "Recent payment defaults detected",
        "flag": "RECENT_DEFAULTS"
      }
    }
  },

  "eligibility_rules": {
    "age_requirements": {
      "ELIG_001": {
        "name": "Minimum Age Check",
        "description": "Applicant must be at least 21 years old",
        "conditions": [
          {
            "field": "personal_info.age",
            "operator": ">=",
            "value": 21
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 10,
        "message": "Age requirement met",
        "flag": "AGE_ELIGIBLE"
      },
      "ELIG_002": {
        "name": "Maximum Age Check",
        "description": "Applicant must be under 65 years old",
        "conditions": [
          {
            "field": "personal_info.age",
            "operator": "<=",
            "value": 65
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 10,
        "message": "Age within acceptable range",
        "flag": "AGE_WITHIN_LIMIT"
      }
    },
    "income_requirements": {
      "ELIG_003": {
        "name": "Minimum Income - Salaried",
        "description": "Minimum monthly income for salaried individuals",
        "conditions": [
          {
            "field": "employment_info.type",
            "operator": "==",
            "value": "salaried"
          },
          {
            "field": "employment_info.monthly_income",
            "operator": ">=",
            "value": 20000
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 15,
        "message": "Minimum income requirement met for salaried",
        "flag": "INCOME_ELIGIBLE_SALARIED"
      },
      "ELIG_004": {
        "name": "Minimum Income - Self Employed",
        "description": "Minimum monthly income for self-employed individuals",
        "conditions": [
          {
            "field": "employment_info.type",
            "operator": "==",
            "value": "self_employed"
          },
          {
            "field": "employment_info.monthly_income",
            "operator": ">=",
            "value": 25000
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "high",
        "score": 15,
        "message": "Minimum income requirement met for self-employed",
        "flag": "INCOME_ELIGIBLE_SELF_EMPLOYED"
      }
    }
  },

  "risk_assessment_rules": {
    "debt_to_income": {
      "RISK_001": {
        "name": "Low DTI Ratio",
        "description": "Debt-to-income ratio below 30%",
        "conditions": [
          {
            "field": "financial_info.debt_to_income_ratio",
            "operator": "<",
            "value": 30
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "low",
        "score": 20,
        "message": "Low debt-to-income ratio - good financial health",
        "flag": "LOW_DTI"
      },
      "RISK_002": {
        "name": "High DTI Ratio",
        "description": "Debt-to-income ratio above 50%",
        "conditions": [
          {
            "field": "financial_info.debt_to_income_ratio",
            "operator": ">",
            "value": 50
          }
        ],
        "logical_operator": "AND",
        "action": "reject",
        "severity": "high",
        "score": -30,
        "message": "High debt-to-income ratio - financial stress indicator",
        "flag": "HIGH_DTI"
      }
    },
    "employment_stability": {
      "RISK_003": {
        "name": "Stable Employment",
        "description": "Employment tenure greater than 2 years",
        "conditions": [
          {
            "field": "employment_info.tenure_months",
            "operator": ">=",
            "value": 24
          }
        ],
        "logical_operator": "AND",
        "action": "approve",
        "severity": "low",
        "score": 15,
        "message": "Stable employment history",
        "flag": "STABLE_EMPLOYMENT"
      },
      "RISK_004": {
        "name": "Short Employment Tenure",
        "description": "Employment tenure less than 6 months",
        "conditions": [
          {
            "field": "employment_info.tenure_months",
            "operator": "<",
            "value": 6
          }
        ],
        "logical_operator": "AND",
        "action": "conditional",
        "severity": "medium",
        "score": -10,
        "message": "Short employment tenure - requires additional verification",
        "flag": "SHORT_EMPLOYMENT"
      }
    }
  },

  "rule_execution_config": {
    "execution_order": ["kyc_rules", "eligibility_rules", "cibil_rules", "risk_assessment_rules"],
    "stop_on_reject": true,
    "minimum_score_threshold": 50,
    "scoring_weights": {
      "kyc_rules": 0.3,
      "eligibility_rules": 0.2,
      "cibil_rules": 0.3,
      "risk_assessment_rules": 0.2
    },
    "action_mapping": {
      "approve": "APPROVED",
      "reject": "REJECTED",
      "conditional": "CONDITIONAL_APPROVAL",
      "flag": "FLAGGED_FOR_REVIEW"
    }
  }
}